<form action="/todos/{{ todo._id }}?_method=DELETE" method="POST" style="display: inline;">
  <div class="input-group">
    <div class="input-group-text">
      <input type="checkbox" name="isDone" {{#if todo.isDone }} checked {{/if}} disabled>
    </div>
    <input type="text" class="form-control" placeholder="name" name="name" value="{{ todo.name }}" disabled>
    <a href="/todo/{{ todo.id }}/edit" class="btn btn-success">edit</a>
    <button type="submit" class="btn btn-danger">delete</button>
  </div>
</form>